<p id="notice"><%= notice %></p>

<h1>Students</h1>

<%= link_to 'New Student', new_student_path, class: "btn btn-primary mt25 mb25" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Profile</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= image_tag student.image.url, class: "profile-img" %></td>
        <td><%= student.name %></td>
        <td><%= student.phone %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


